%h1 Users

= link_to 'New User', new_user_path

%table.table
  %thead
    %tr
      %th Name
      %th Phone Number
      %th Actions

  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.phone_number
        %td
          = link_to 'Show', user_path(user)
          = link_to 'Edit', edit_user_path(user)
          = link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }
